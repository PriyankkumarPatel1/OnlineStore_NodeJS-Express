extends ../layout

block content
  //- if user is not logged in, then error mesasge on the page
  .container
    if(!user)
        h1 Please Login first!
    else
        h5.text-center #{title}
        form(method='POST' action='/edit')
            div.row
                h5.col-sm-3 Car
                input(type='text' name='car' value=car.car).col-sm-9
            div.row
                h5.col-sm-3 Description
                input(type='text' name='average' value=car.average).col-sm-9
            div.row
                h5.col-sm-3 Price
                input(type='text' name='price' value=car.price).col-sm-9
            div.row
                h5.col-sm-3 Engine
                input(type='text' name='engine' value=car.engine).col-sm-9
            div.row
                h5.col-sm-3 Type
                input(type='text' name='type' value=car.type).col-sm-9
            div
                input(type='hidden' name='id' value=car.id)
                button(type='submit' value='Submit').btn.btn-warning Add Car to Database
