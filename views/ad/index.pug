extends ../layout

block content  
    table.table.table-striped
        thead
            tr
                th Car
                th Description
                th Price
                th Egine
                th Type
                if(user)
                    th Edit/Delete
        tbody
            each c in car
                tr 
                    th= c.car
                    th= c.average
                    th= c.price
                    th= c.engine
                    th= c.type
                    if(user)
                        th 
                            a(href='/edit/'+c.id).btn Edit
                            form.deleteForm(id=c.id)
                                button(type='submit').btn.btn-danger Delete 
    script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
    script(src='/javascripts/delete.js')


